#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/internet_connection_validator'
require_relative '../lib/reader'
require_relative '../lib/url_validator'
require_relative '../lib/image_downloader'
require_relative '../lib/performance'

unless ARGV.any?
  warn 'Please, write file name'
  exit
end

InternetConnectionValidator.call
Performance.call(ARGV.first, Reader, UrlValidator, ImageDownloader)
